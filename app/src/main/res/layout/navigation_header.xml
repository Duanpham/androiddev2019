<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="101dp"
        android:src="@drawable/profile"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nav_user_fullname"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="73dp"
        android:paddingTop="10dp"
        android:text="fullname"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/following"
        android:layout_width="71dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="184dp"
        android:layout_marginRight="184dp"
        android:text="Following"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/follower"
        android:layout_width="78dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/following"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="-3dp"
        android:text="Followers"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/number_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="265dp"
        android:layout_marginRight="265dp"
        android:text="0" />

    <TextView
        android:id="@+id/number_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/number_following"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:text="0" />

    <TextView
        android:id="@+id/nav_user_username"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_alignStart="@+id/nav_user_fullname"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="44dp"
        android:text="username" />


</RelativeLayout>